{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "COVID-19 Active Cases (10 Oct 2020)",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://github.com/geraldleeming/FIT3179Week9/blob/main/custom.geo(1).json",
    "format": {
          "type": "topojson",
          "feature": "custom.geo(1)"
        }
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://github.com/geraldleeming/FIT3179Week9/2015.csv"
        },
        "key": "Country",
        "fields": ["Happiness Score"]
      }
    },
    {"calculate": "datum.Active + 0.1", "as": "Active Cases"}
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "Happiness Score",
      "type": "quantitative",
      "scale": {"type": "threshold",
                "domain": [2,4,6],
                "range": ["#ff0000","#ff9999","#99ff99","#009900"]}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Score", "type": "quantitative"}
    ]
  }

}
